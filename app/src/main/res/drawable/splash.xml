<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blue Trapezoid -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#0000FF"
                    android:centerColor="#0000FF"
                    android:endColor="#0000FF"
                    android:angle="0"/>
            </shape>
        </rotate>
    </item>

    <!-- Red Triangle -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#FF0000"
                    android:centerColor="#FF0000"
                    android:endColor="#FF0000"
                    android:angle="0"/>
            </shape>
        </rotate>
    </item>

    <!-- Yellow Triangle -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#FFFF00"
                    android:centerColor="#FFFF00"
                    android:endColor="#FFFF00"
                    android:angle="0"/>
            </shape>
        </rotate>
    </item>
</layer-list>

